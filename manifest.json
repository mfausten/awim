{
	"applications": {
    "gecko": {
      "id": "addon@example.com"
    }
  },
	"manifest_version": 2,
	"name": "youtubeStopper",
	"version": "0.0.1",
	"description": "foo bar baz",
  "homepage_url": "foo.bar",
	"permissions": ["tabs", "activeTab"],
  "browser_action": {
    "default_icon": {
      "19": "icons/logo19.png",
      "38": "icons/logo38.png"
    },
    "default_title": "youtubeStopper"
  },
  "content_scripts": [
    {
      "matches": "*://*.youtube.com/",
      "js": ["content_scripts/stop.js"]
    }  
  ],
  "background": {
    "scripts": ["content_scripts/listener.js"]
  }
}